<!DOCTYPE html>
<html lang="es">
	<head>
		<%- include ('../partials/head') %>
		<link rel="stylesheet" href="/css/profile.css">
		<title>Profile</title>
		
	</head>

	<header>
		<%- include ('../partials/header') %>
	</header>

<body>
	<br>
	
	
	<!-- Container -->
	<div class="container-mobile">
		<div class="user-profile">
			<section class="user-img">
			<img class="user-avatar" src="/img/users/<%= user.image %> ">
			</section>
			<section class="user-text">
				<h2 class="user-titulo">Hi <%= user.name %> <%= user.last_name %> </h2>

				<div class="user-sub">Usuario:<div class="user-email"><%= user.name_user %> </div></div>
				<div class="user-sub">Email:<div class="user-email"><%= user.email %> </div></div>	

				
				<a href="/user/profile/<%=user.id_user%>/edit">
					<button class="user-btn-edit">Editar</button>
				</a>

				<a class="user-btn-edit-text" href="/user/logout"></a>
					<button class="user-btn-edit">Cerrar Sesión</button>
				</a>
				
		
				
				
			</div>
			</section>
		</div>

		<div class="container-desk">
			<div class="user-profile">
				<section class="user-img">
				<img class="user-avatar" src="/img/users/<%= user.image %> ">
	
				<br>
	
				<button class="user-btn-edit">
				<a class="user-btn-edit-text" href="/user/logout">Cerrar Sesión</a>
				</button>
				</section>
	
	
				<section class="user-text">
					<h2 class="user-titulo">Hi <%= user.name %> <%= user.last_name %> </h2>
	
				
					<br>
					<br>
					<br>
					<div class="user-sub">Usuario:<div class="user-email"><%= user.name_user %> </div></div>
					<div class="user-sub">Email:<div class="user-email"><%= user.email %> </div></div>	
					
					<br><br><br>
					
					<a href="/user/profile/<%=user.id_user%>/edit">
						<button class="user-btn-edit">Editar</button>
					</a>
			
					
					
				</div>
				</section>
			</div>
	

	<br>
	<br>

	<% if (locals.isLogged && locals.userLogged.id_rol === 1) { %>
	<section class="admin-container">
		<div class="admin-list">

			<a href="../../admin/formCarga" class="admin-list-icon-text">
				<div class="admin-list-icon">
				<i class="fa-solid fa-book"></i>
				</div>
				<div class="admin-list-text">
					Lista de Libros
				</div>
			</a>
		
			<a href="../../admin/formCargaLibro" class="admin-list-icon-text">
				<div class="admin-list-icon">
				<i class="fa-solid fa-folder-plus"></i>
				</div>
				<div  class="admin-list-text">
					Cargar Libros
				</div>
			</a>

			<a href="../../admin/list" class="admin-list-icon-text">
				<div class="admin-list-icon">
				<i class="fa-solid fa-users"></i>
				</div>
				<div  class="admin-list-text">
					Lista de Usuarios
				</div>
			</a>

		</div>
	</section>	
		<% } %>
	
	
	
	<br>
	
</body>

<footer>
    <%- include ('../partials/footer') %>

</footer>

</html>